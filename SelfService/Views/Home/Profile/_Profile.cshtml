@using OOS.GHR.HRIS.Models
@model ProfilePreviewModel
<div class="row margin-top-20" style="padding-top:0px !important; margin:0px !important; padding-right:0px !important; background: #E5E5E5 !important;">
    <div class="col-lg-12" style="padding-right:0px !important; padding-left:0px !important">
            <div class="profile-content">
                <div class="row">
                    <div class="col-lg-6" style="padding-right:5px !important">
                        @Html.Partial("~/Areas/SelfService/Views/Home/Profile/_Profile_PersonalInfo.cshtml", Model)
                    </div>
                    <div class="col-lg-6" style="padding-left:5px !important">
                        @Html.Partial("~/Areas/SelfService/Views/Home/Profile/_Profile_ContractInfo.cshtml", Model)
                    </div>
                </div>
                <div class="row">
                    @if (Model.HSNS.IsOK)
                    {
                        <div class="col-lg-6" style="padding-right:5px !important">
                            @Html.Partial("~/Areas/SelfService/Views/Home/Profile/_Profile_DBUI.cshtml", Model)
                        </div>
                        <div class="col-lg-6" style="padding-left:5px !important">
                            @Html.Partial("~/Areas/SelfService/Views/Home/Profile/_Profile_RecentProcess.cshtml", Model)
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-6" style="padding-right:5px !important">
                           @Html.Partial("~/Areas/SelfService/Views/Home/Profile/_Profile_RecentProcess.cshtml", Model)
                        </div>
                        <div class="col-lg-6" style="padding-left:5px !important"></div>
                    }
                </div>
            </div>
    </div>
</div>