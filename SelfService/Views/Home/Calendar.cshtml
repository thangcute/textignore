@model int
@{
    Layout = "~/Views/Shared/_portalLayout.cshtml";
}
<div class="OOSPageContent">
    <div style="display:block; max-width:1000px; margin-left:auto; margin-right:auto;align-content:center">
        <div style="display:inline-block; width:100%">
            <div style="display:inline-flex;">
                <div class="TopTextOrange"></div>
                <div class="TopTextItems TopTextBoder">
                    @T("Lịch làm việc").Text
                </div>
                <div style="font-weight:600; padding-top:7px; padding-left:5px; font-size:16px">@ViewData["MaNhanVien"].ToString() - @ViewData["HoVaTen"].ToString()</div>
            </div>
            <div style="display:inline-flex; float:right">
                <button class="btn blue-steel" type="button" id="btXetDuyet" onclick="pcModalMode.Show();">
                    <i class="fa fa-calendar-plus-o"></i> @T("Đăng ký nghỉ phép")
                </button>
                <button class="btn blue-steel" type="button" id="btXetDuyet" onclick="scheduler.Refresh();">
                    <i class="fa fa-plane"></i> @T("Đi công tác")
                </button>
            </div>
        </div>
    </div>
    <div style="width:100%; max-width:1000px; margin-left:auto; margin-right:auto;align-content:center">
        @Html.Partial("_CaView", new OOS.GHR.HRIS.Models.SchedulerDataObject(Model));
    </div>
</div>